<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   android:background="@mipmap/walls59"
    tools:context="vyom.com.gpstracker.MainActivity">


    <TextView
        android:id="@+id/prof_email"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="TextView"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/prof_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/prof_Sign_Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_below="@+id/prof_email"
        android:layout_alignLeft="@+id/prof_email"
        android:layout_alignStart="@+id/prof_email"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/prof_name"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="TextView"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/prof_image_View"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginBottom="17dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>